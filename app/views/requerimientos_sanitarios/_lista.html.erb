
<% if requerimientos_sanitarios.present? %>
  
  <% requerimientos_sanitarios.each do |i| %>

    <tr>

      <td class="text-min"><%= i.periodo %></td>
      <td class="text-min"><%= i.numero_prioridad %></td>
      <td class="text-min" style="font-weight:bold;">
        <%= link_to i.codigo_establecimiento, mec_custom_url(id_establecimientos_path(i.codigo_establecimiento)), target: '_blank', style: 'font-weight:bold;', title: 'Visualizar URI' %>
      </td>  
      <td class="text-min"><%= link_to i.codigo_institucion.gsub(".","").to_i, mec_custom_url(id_instituciones_path(i.codigo_institucion.gsub(".","").to_i)), target: '_blank', style: 'font-weight:bold;', title: 'Visualizar URI' %></td>
      <td class="text-min"><%= i.nombre_institucion %></td>
      <td class="text-min"><%= i.nombre_departamento %></td>
      <td class="text-min"><%= i.nombre_distrito %></td>
      <td class="text-min"><%= i.nombre_barrio_localidad %></td>
      <td class="text-min"><%= i.nombre_zona %></td>
      <td class="text-min"><%= i.nivel_educativo_beneficiado %></td>
      <td class="text-min"><%= i.abastecimiento_agua %></td>
      <td class="text-min"><%= i.servicio_sanitario_actual %></td>
      <td class="text-min"><%= i.cuenta_espacio_para_construccion %></td>       
      <td class="text-min"><%= i.tipo_requerimiento_infraestructura %></td>       
      <td class="text-min"><%= i.cantidad_requerida %></td>       
      <td class="text-min"><%= i.justificacion %></td>       
      <td class="text-min"><%= i.numero_beneficiados %></td>      
    </tr>
  
  <% end %>
  
  <% else %>

  <tr>
    
    <td colspan="19"><p class='none-result'>No se han encontrado resultados.</p></td>
  
  </tr>

<% end %>
