    <%= link_to "Inicio", mec_custom_url(index_url), :title => "Ir al inicio", :style => "font-size:12px;" %>
    <%= link_to image_tag("home.png", :style => "width:24px;"), mec_custom_url(index_url), :title => "Ir al inicio" %>
  </span>

</h2>

<table class="table table-striped table-bordered table-hover">

  <tr>

    <%= form_tag mec_custom_url(data_nomina_administrativos_lista_url(nil)), :remote => true, :id => "form-buscar-nominas" do  %>

      <th style="width:100px;text-align:center;" class="text-min">
        <%= label_tag nil, "A&ntilde;o".html_safe %><br />
        <%= select :form_buscar_nominas, :ano_periodo_pago, [2014], {:class => 'text-min'} %>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_ano_periodo_pago').val('2014');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:100px;text-align:center;" class="text-min celda-derecha">
        <%= label_tag "Mes" %><br />
        <%= select :form_buscar_nominas, :mes_periodo_pago, [["julio", 7], ["junio", 6]], {:class => 'text-min'} %>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_mes_periodo_pago').val('2014');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>
      
      <th style="width:12%;text-align:center;" class="text-min">
        <%= label_tag nil, "N° Documento".html_safe%><br />
        <%= text_field_tag :form_buscar_nominas_codigo_trabajador, nil, :class => 'text-min' , :style => "width: 60px;"%>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_codigo_trabajador').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:12%;text-align:center;" class="text-min">
        <%= label_tag "Nombre completo"%><br />
        <%= text_field_tag :form_buscar_nominas_nombre_trabajador, nil, :class => 'text-min' , :style => "width: 60px;"%>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_nombre_trabajador').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:12%;text-align:center;" class="text-min">
        <%= label_tag "Objeto de Gasto"%><br />
        <%= text_field_tag :form_buscar_nominas_nombre_objeto_gasto, nil, :class => 'text-min' , :style => "width: 60px;"%>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_nombre_objeto_gasto').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:12%;text-align:center;" class="text-min">
        <%= label_tag "Estado"%><br />
        <%= text_field_tag :form_buscar_nominas_estado, nil, :class => 'text-min' , :style => "width: 60px;"%>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_estado').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:12%;" class="text-min">
        <%= label_tag "Antigüedad"%><br />
        <%= text_field_tag :form_buscar_nominas_antiguedad_administrativo, nil, :class => 'text-min' , :style => "width: 60px;"%>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_antiguedad_administrativo').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:16%;text-align:center;" class="text-min">
        <%= label_tag nil, "Asignaci&oacute;n".html_safe %><br />
        <%= select_tag(:form_buscar_nominas_asignacion_operador, options_for_select(['>', '<', '='])) %>
        <%= text_field_tag :form_buscar_nominas_asignacion, nil, :class => 'text-min', :style => "width: 60px;" %>
        <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_nominas_asignacion').val('');$('#form-buscar-nominas').submit();" ,:style => "color:#fff;"%>
      </th>

      <th style="width:16px;"></th>
      
    <% end %>

  </tr>

  <tbody id="nominas-lista"></tbody>

</table>

<script type="text/javascript">

  $("#form-buscar-nominas").bind("submit", function(){

			$('.nominas-detalles').html('');
      $("#nominas-lista").html("<%= escape_javascript("<tr><td colspan='8' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}").html_safe %></td></tr>")    
  
  })

  $("#form_buscar_nominas_ano_periodo_pago").bind('change',function(){
      
		$(".nominas-detalles").html('');
    $("#form-buscar-nominas").submit();
      
  })

  $("#form_buscar_nominas_mes_periodo_pago").bind('change',function(){
      
		$(".nominas-detalles").html('');
    $("#form-buscar-nominas").submit();
      
  })

  $("#form_buscar_nominas_asignacion_operador").bind('change',function(){
      
		$(".nominas-detalles").html('');
    $("#form-buscar-nominas").submit();
      
  })

  $(".table-bordered input").bind('change',function(){
  
    $(".nominas-detalles").html('');
    $("#form-buscar-nominas").submit();    
    
  })

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_nominas(){
    
    $("#form_buscar_nominas_ano_periodo_pago").val("2014");
    $("#form_buscar_nominas_mes_periodo_pago").val("7");
    $("#form_buscar_nominas_codigo_trabajador").val("");
    $("#form_buscar_nominas_nombre_trabajador").val("");
    $("#form_buscar_nominas_asignacion").val("");
    $(".nominas-detalles").html('');
    $("#form-buscar-nominas").submit();    

  }  

  limpiar_form_buscar_nominas();

</script>

