<% if productos.present? %>
  
  <tr>
    <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate productos, :params => params %></div></td>
  </tr>

  <tr>
    <td colspan="12">Cantidad de registros encontrados: <%= @productos_todos.size %> de <%= @total_registros %></td>
  </tr>

  <tr>

    <%  
        parametros_csv = { :format => 'csv' }
        parametros_csv = parametros_csv.merge(params) 
        parametros_csv_todos = { :format => 'csv'}
    %>

    <% 
        parametros_xls = { :format => 'xlsx'}
        parametros_xls = parametros_xls.merge(params) 
        parametros_xls_todos = { :format => 'xlsx' }
    %>

    <% 
        parametros_json = { :format => 'json' }
        parametros_json = parametros_json.merge(params) 
        parametros_json_todos = { :format => 'json' }
    %>

    <% 
        parametros_pdf = { :format => 'pdf' }
        parametros_pdf = parametros_pdf.merge(params) 
        parametros_pdf_todos = { :format => 'pdf' }
    %>

    <td colspan="12" class="row-descargar">
      <%= image_tag "datos-abiertos-nuevo.png", :style => "width:240px; margin-bottom:10px;" %>
      <a href="http://www.w3.org/TR/microdata/"><%= image_tag "microdata-icon.png", :style => "width:32px; margin-bottom:10px;" %></a></br>
      <span>Descargar Inventario Filtrado:</span>

      <% image_star = image_tag('star.png', :style => 'width:12px;padding-bottom:10px;') %>

      <%#= link_to "PDF#{image_star}".html_safe, mec_custom_url(data_instituciones_lista_url(parametros_pdf)) , :targer => "_target", :style => "margin-left:10px;", :class => 'icon icon-page_white_acrobat' %>
      <%= link_to "XLS#{image_star * 2}".html_safe, mec_custom_url(data_productos_lista_url(parametros_xls)) , :target => "_target", :style => "margin-left:10px;", :class => 'icon icon-page_excel'%>
      <%= link_to "CSV#{image_star * 3}".html_safe, mec_custom_url(data_productos_lista_url(parametros_csv)) , :targer => "_target", :style => "margin-left:10px;", :class => 'icon icon-page'%>
      <%= link_to "JSON#{image_star * 3}".html_safe, mec_custom_url(data_productos_lista_url(parametros_json)) , :target => "_target", :style => "margin-left:10px;", :class => 'icon icon-page_white_text_width'%>
      <br /><br />
        
      <div style="float:left;">Descargar todo el Inventario:</div>
        
        <div style="float:left;text-align:center;" itemprop="distribution" itemscope itemtype="https://schema.org/DataDownload">
          <%#= link_to "PDF#{image_star}".html_safe, mec_custom_url(data_instituciones_lista_url(parametros_pdf_todos)), :target => "_blank", :style => "margin-left:10px;", :class => 'icon icon-page_white_acrobat', :itemprop => "url"%>
          <meta itemprop="name" content="Inventarios">
          <meta itemprop="description" content="Inventario correspondiente al a単o 2015">
          <meta itemprop="encodingFormat" content="pdf">
          <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode" />
        </div>

        <div style="float:left;text-align:center;" itemprop="distribution" itemscope itemtype="https://schema.org/DataDownload">
          <%= link_to "XLS#{image_star * 2}".html_safe, mec_custom_url(data_productos_lista_url(parametros_xls_todos)), :target => "_blank", :style => "margin-left:10px;", :class => 'icon icon-page_excel', :itemprop => "url", :content => mec_custom_url(data_productos_lista_url(parametros_xls_todos)) %>
          <br />
          <span style="color:silver;"></span>
          <meta itemprop="name" content="Inventarios">
          <meta itemprop="description" content="Inventario correspondiente al a単o 2015">
          <meta itemprop="encodingFormat" content="xls">
          <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode" />
        </div>

        <div style="float:left;text-align:center;" itemprop="distribution" itemscope itemtype="https://schema.org/DataDownload">
          <%= link_to "CSV#{image_star * 3}".html_safe, mec_custom_url(data_productos_lista_url(parametros_csv_todos)), :target => "_blank", :style => "margin-left:10px;", :class => 'icon icon-page', :itemprop => "url", :content => mec_custom_url(data_productos_lista_url(parametros_csv_todos)) %>
          <br />
          <span style="color:silver;"></span>
          <meta itemprop="name" content="Inventarios">
          <meta itemprop="description" content="Inventario correspondiente al a単o 2015">
          <meta itemprop="encodingFormat" content="csv">
          <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode" />
        </div>

        <div style="float:left;text-align:center;" itemprop="distribution" itemscope itemtype="https://schema.org/DataDownload">
          <%= link_to "JSON#{image_star * 3}".html_safe, mec_custom_url(data_productos_lista_url(parametros_json_todos)), :target => "_blank", :style => "margin-left:10px;", :class => 'icon icon-page_white_text_width', :itemprop => "url", :content => mec_custom_url(data_productos_lista_url(parametros_json_todos)) %>
          <br />
          <span style="color:silver;"></span>
          <meta itemprop="name" content="Inventarios">
          <meta itemprop="description" content="Inventario correspondiente al a単o 2015">
          <meta itemprop="encodingFormat" content="json">
          <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode" />
        </div>

      <div style="clear:both;"></div>

      </td>
 
    </tr>

<% end %>
