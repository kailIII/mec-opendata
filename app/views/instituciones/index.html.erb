    $("#form_buscar_instituciones_correo_electronico").val("");
    
    $("#form-buscar-instituciones").submit();

  } 

  <% if params[:ci].present? %>

    $("#form_buscar_instituciones_codigo_institucion").val("<%= params[:ci] %>");
    $("#form-buscar-instituciones").submit();
  
  <% else %>

    limpiar_form_buscar_instituciones();
  
  <% end %>

</script>

