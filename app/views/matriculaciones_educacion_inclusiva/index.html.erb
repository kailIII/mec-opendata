      <% end %>

    <tbody id="matriculaciones-educacion-inclusiva-lista"></tbody>

  </table>
</div>

<table class="table table-striped table-bordered table-hover">
  <tbody id="matriculaciones-educacion-inclusiva-footer"></tbody>
</table>
<script type="text/javascript">

  $("#form-buscar-matriculaciones-educacion-inclusiva").bind("submit", function() {

    $("#matriculaciones-educacion-inclusiva-lista").html("<%= escape_javascript("<tr><td colspan='13' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}").html_safe %></td></tr>")

  })

  $("#form_buscar_matriculaciones_educacion_inclusiva_anio").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-matriculaciones-educacion-inclusiva").submit();

  })

  $(".table-bordered :input").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-matriculaciones-educacion-inclusiva").submit();

  })

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_matriculaciones_educacion_inclusiva() {

    $("#form_buscar_matriculaciones_educacion_inclusiva_anio").val("2012");
    $("#form_buscar_matriculaciones_educacion_inclusiva_nombre_departamento").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_nombre_distrito").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_nombre_zona").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_nombre_barrio_localidad").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_codigo_establecimiento").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_codigo_institucion").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_nombre_institucion").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_matricula_inicial_especial").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_matricula_primer_y_segundo_ciclo_especial").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_matricula_tercer_ciclo_especial").val("");
    $("#form_buscar_matriculaciones_educacion_inclusiva_matricula_programas_especiales").val("");
    $.ajaxQ.abortAll();
    $("#form-buscar-matriculaciones-educacion-inclusiva").submit();

  }


  limpiar_form_buscar_matriculaciones_educacion_inclusiva();

  //--------------- QUITAR FILTRO -------------------//
  function quitar_filtro(id, ban) {
    if (ban === 1) {
      id.val("2012");
    } else {
      id.val('');
    }
    $.ajaxQ.abortAll();
    $('#form-buscar-matriculaciones-educacion-inclusiva').submit();

  }
  //-------------------------------------------------//

</script>

