        </th>

        <th style="width:7%;" class="text-min">
          <%= label_tag "Nombre de Institución"%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_nombre_institucion, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_nombre_institucion'));" %>
        </th>

        <th style="width:7%;" class="text-min">
          <%= label_tag "Departamento"%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_nombre_departamento, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_nombre_departamento'));" %>
        </th>

        <th style="width:7%;" class="text-min">
          <%= label_tag "Distrito"%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_nombre_distrito, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_nombre_distrito'));" %>
        </th>

        <th style="width:7%;" class="text-min">
          <%= label_tag "Barrio/Localidad"%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_nombre_barrio_localidad, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_nombre_barrio_localidad'));" %>
        </th>

        <th style="width:5%;" class="text-min">
          <%= label_tag "Zona"%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_nombre_zona, nil, :class => 'text-min' %>
