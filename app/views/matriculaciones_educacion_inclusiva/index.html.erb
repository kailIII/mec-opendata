  <table id="matriculaciones-educacion-inclusiva-table" class="table table-striped table-bordered table-hover" style="margin-bottom: 0px; width: 2200px; max-width: none">
    <tr>

      <%= form_tag mec_custom_url(data_matriculaciones_educacion_inclusiva_lista_url(nil,nil)), :remote => true, :id => "form-buscar-matriculaciones-educacion-inclusiva" do  %>

        <th style="width:4%;" class="text-min celda-derecha">
          <%= label_tag "Periodo" %><br />
          <%= select :form_buscar_matriculaciones_educacion_inclusiva, :anio, [2012], {:class => 'text-min'} %>
