        </th>
        <th style="width:7%;" class="text-min">
          <%= label_tag nil, "C&oacute;digo Establecimiento".html_safe%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_codigo_establecimiento, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_codigo_establecimiento'));" %>
        </th>

        <th style="width:7%;" class="text-min">
          <%= label_tag nil, "C&oacute;digo Instituci&oacute;n".html_safe%><br />
          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_codigo_institucion, nil, :class => 'text-min' %>
