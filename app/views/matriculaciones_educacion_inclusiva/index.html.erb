          <%= text_field_tag :form_buscar_matriculaciones_educacion_inclusiva_matricula_tercer_ciclo_especial, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_matriculaciones_educacion_inclusiva_matricula_tercer_ciclo_especial'));" %>
