  })

  $("#form_buscar_requerimientos_otros_espacios_periodo").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  })


  $("#form_buscar_requerimientos_otros_espacios_tipo_requerimiento_infraestructura").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  })

  $("#form_buscar_requerimientos_otros_espacios_numero_beneficiados_operador").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  })

  $("#form_buscar_requerimientos_otros_espacios_cantidad_requerida_operador").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  })


  $(".table-bordered input").bind('change', function() {
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  })

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_requerimientos_otros_espacios() {

    $("#form_buscar_requerimientos_otros_espacios_periodo").val("2015");
    $("#form_buscar_requerimientos_otros_espacios_codigo_institucion").val("");
    $("#form_buscar_requerimientos_otros_espacios_nombre_institucion").val("");
    $("#form_buscar_requerimientos_otros_espacios_codigo_establecimiento").val("");
    $("#form_buscar_requerimientos_otros_espacios_nombre_departamento").val("");
    $("#form_buscar_requerimientos_otros_espacios_nombre_distrito").val("");
    $("#form_buscar_requerimientos_otros_espacios_nombre_zona").val("");
    $("#form_buscar_requerimientos_otros_espacios_nivel_educativo_beneficiado").val("");
    $("#form_buscar_requerimientos_otros_espacios_cuenta_espacio_para_construccion").val("");
    $("#form_buscar_requerimientos_otros_espacios_nombre_espacio").val("");
    $("#form_buscar_requerimientos_otros_espacios_tipo_requerimiento_infraestructura").val("");
    $("#form_buscar_requerimientos_otros_espacios_cantidad_requerida").val("");
    $("#form_buscar_requerimientos_otros_espacios_justificacion").val("");
    $("#form_buscar_requerimientos_otros_espacios_numero_beneficiados").val("");
    $("#form_buscar_requerimientos_otros_espacios_numero_prioridad").val("");
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

  }

<% if params[:ci].present? %>

    $("#form_buscar_requerimientos_otros_espacios_codigo_institucion").val("<%= params[:ci] %>");
    $.ajaxQ.abortAll();
    $("#form-buscar-requerimientos-otros-espacios").submit();

<% else %>

    limpiar_form_buscar_requerimientos_otros_espacios();

<% end %>

  //--------------- QUITAR FILTRO -------------------//
  function quitar_filtro(id,ban) {
    if (ban === 1){
      id.val("2015");
    }else{
      id.val('');
    }
    $.ajaxQ.abortAll();
    $('#form-buscar-requerimientos-otros-espacios').submit();

  }
  //-------------------------------------------------//

</script>

