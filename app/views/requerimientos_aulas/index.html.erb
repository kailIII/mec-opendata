  })

  $("#form_buscar_requerimientos_aulas_cuenta_espacio_para_construccion").bind('change', function() {

    $("#form-buscar-requerimientos-aulas").submit();

  })

  $("#form_buscar_requerimientos_aulas_tipo_requerimiento_infraestructura").bind('change', function() {

    $("#form-buscar-requerimientos-aulas").submit();

  })


  $(".table-bordered input").bind('change', function() {

    $("#form-buscar-requerimientos-aulas").submit();

  })

