    $("#form_buscar_requerimientos_aulas_codigo_establecimiento").val("");
    $("#form_buscar_requerimientos_aulas_nombre_departamento").val("");
    $("#form_buscar_requerimientos_aulas_nombre_distrito").val("");
    $("#form_buscar_requerimientos_aulas_nombre_barrio_localidad").val("");
    $("#form_buscar_requerimientos_aulas_nombre_zona").val("");
    $("#form_buscar_requerimientos_aulas_nivel_educativo_beneficiado").val("");
    $("#form_buscar_requerimientos_aulas_cuenta_espacio_para_construccion").val("");
    $("#form_buscar_requerimientos_aulas_tipo_requerimiento_infraestructura").val("");
    $("#form_buscar_requerimientos_aulas_cantidad_requerida").val("");
    $("#form_buscar_requerimientos_aulas_justificacion").val("");
    $("#form_buscar_requerimientos_aulas_numero_beneficiados").val("");
    $("#form_buscar_requerimientos_aulas_numero_prioridad").val("");

    $("#form-buscar-requerimientos-aulas").submit();

  }

<% if params[:ci].present? %>

    $("#form_buscar_requerimientos_aulas_codigo_institucion").val("<%= params[:ci] %>");
    $("#form-buscar-requerimientos-aulas").submit();

<% else %>

    limpiar_form_buscar_requerimientos_aulas();

<% end %>

