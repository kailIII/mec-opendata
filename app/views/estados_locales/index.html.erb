<h2>
  <span itemprop="name">ESTADOS LOCALES - FONACIDE</span>
  <meta itemprop="url" content="http://datos.mec.gov.py/data/estados_locales">  
  <meta itemprop="description"
                content="Contiene información sobre la ubicación geográfica de los establecimientos escolares tales como el departamento, distrito,barrio/localidad donde se encuentran asentados, además de la zona (urbana o rural) a la cual pertenecen, y los datos georreferenciadas como las coordenadas planas (en metros) y geograficas. El Sistema de informacion de Estadística Continua (SIEC) considera “Establecimiento Escolar” a la construcción que existe dentro de un predio (terreno) que se emplea para la enseñanza, donde puede funcionar una o más instituciones educativas con sus respectivos niveles/modalidades de educación. Se contiene inforamaci&oacute; sobre su estructura actual, abastecimiento de agua, severvicio de sanitario acutal, suministro de energ&iacute;a el&eacute;ctrica, si cuenta con plano, t&iacute;tulo de propiedad y mecanismo de prevenci&oac&oacute;n de incendio."
            />
  <meta itemprop="temporal" style="display: none;" content="2012-01-01/2012-12-31"/>
  <span itemprop="catalog" itemscope itemtype="https://schema.org/DataCatalog" style="display: none;">
    <meta itemprop="name" content="Datos Abiertos del Ministerio de Educación y Cultura">
    <meta itemprop="url" content="http://datos.mec.gov.py/">
    <meta itemprop="description" content="Datos Abiertos del Ministerio de Educación y Cultura">
  </span>
  <span itemprop="provider" itemscope itemtype="https://schema.org/Organization" style="display: none;">
    <meta itemprop="name" content="Ministerio de Educación y Cultura">
    <meta itemprop="url" content="http://www.mec.gov.py/">
    <meta itemprop="email" content="datosabiertos@mec.gov.py">
  </span>
  <span itemprop="creator" itemscope itemtype="https://schema.org/Person" style="display: none;">
    <meta itemprop="name" content="Juan Barrios">
    <meta itemprop="email" content="datosabiertos@mec.gov.py">
  </span>
  <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode"/>
  <meta itemprop="keywords" style="display: none;" content="educación,establecimientos,escolar,estado,local"/>
  <meta itemprop="version" style="display: none;" content="1.0">

  <span style="float:right;">
    <%= link_to "Ver diccionario", mec_custom_url(def_estados_locales_url), :title => "Ir al diccionario", :style => "font-size:12px;" %>
    <%= link_to image_tag("def_icon.png", :style => "width:24px;" ), mec_custom_url(def_estados_locales_url), :title => "Ir al diccionario" %>
    <%= link_to "Inicio", mec_custom_url(index_url), :title => "Ir al inicio", :style => "font-size:12px;" %>
    <%= link_to image_tag("home.png", :style => "width:24px;"), mec_custom_url(index_url), :title => "Ir al inicio" %>
  </span>

</h2>

<div class="table-outter">
  
  <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px; width: 2500px; max-width: none;">

    <tr>

      <%= form_tag mec_custom_url(data_estados_locales_lista_url), :remote => true, :id => "form-buscar-estados-locales" do  %>

        <th style="width:2%" class="text-min celda-derecha">
          <%= label_tag "Periodo" %><br /><br />
          <%= select :form_buscar_estados_locales, :periodo, [2015,2012], {:class => 'text-min'} %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_periodo').val('2015');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:2%" class="text-min">
          <%= label_tag "Departamento"%><br /><br />
          <%= text_field_tag :form_buscar_estados_locales_nombre_departamento, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_nombre_departamento').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:2%" class="text-min">
          <%= label_tag "Distrito" %><br /><br />
          <%= text_field_tag :form_buscar_estados_locales_nombre_distrito, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_nombre_distrito').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:2%" class="text-min">
          <%= label_tag nil, "C&oacute;digo Establecimiento".html_safe %><br /><br />
          <%= text_field_tag :form_buscar_estados_locales_codigo_establecimiento, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_codigo_establecimiento').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:1%;" class="text-min">
          <%= label_tag nil, "Zona".html_safe%><br /><br />
          <%= text_field_tag :form_buscar_estados_locales_nombre_zona, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_nombre_zona').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:4%;" class="text-min">
          <%= label_tag nil, "Nombre de Asentamiento<br/>o Colonia".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_nombre_asentamiento_colonia, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_nombre_asentamiento_colonia').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:3%;" class="text-min">
          <%= label_tag nil, "Suministro Energ&iacute;a<br/>El&eacute;ctrica".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_suministro_energia_electrica, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_suministro_energia_electrica').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:3%;" class="text-min">
          <%= label_tag nil, "Abastecimiento de<br/>Agua".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_abastecimiento_agua, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_abastecimiento_agua').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:3%;" class="text-min">
          <%= label_tag nil, "Servicio Sanitario<br/>Actual".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_servicio_sanitario_actual, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_servicio_sanitario_actual').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:2%;" class="text-min">
          <%= label_tag nil, "T&iacute;tulo de<br/> Propiedad".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_titulo_de_propiedad, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_titulo_de_propiedad').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:2%;" class="text-min">
          <%= label_tag nil, "Cuenta con Plano".html_safe%><br /><br />
          <%= text_field_tag :form_buscar_estados_locales_cuenta_plano, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_cuenta_plano').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>
        
        <th style="width:3%;" class="text-min">
          <%= label_tag nil, "Cuenta con Prevenci&oacute;n de<br/>Incendio".html_safe%><br />
          <%= text_field_tag :form_buscar_estados_locales_prevencion_incendio, nil, :class => 'text-min' %>
          <%= link_to_function image_tag("delete-icon.png", :style => "width:16px;"), "$('#form_buscar_estados_locales_prevencion_incendio').val('');$('#form-buscar-estados-locales').submit();" ,:style => "color:#fff;"%>
        </th>

      <% end %>

    </tr>

    <tbody id="estados-locales-lista"></tbody>

  </table>

</div>

<table class="table table-striped table-bordered table-hover">
  <tbody id="estados-locales-footer"></tbody>
</table>

<script type="text/javascript">

  $("#form-buscar-estados-locales").bind("submit", function(){

    $("#estados-locales-lista").html("<%= escape_javascript("<tr><td colspan='19' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}").html_safe %></td></tr>")    
  
  })

  $("#form_buscar_estados_locales_periodo").bind('change',function(){
      
    $("#form-buscar-estados-locales").submit();
      
  })

  $(".table-bordered input").bind('change',function(){
      
    $("#form-buscar-estados-locales").submit();
      
  })

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_estados_locales(){
    
    $("#form_buscar_estados_locales_periodo").val("2015");
    $("#form_buscar_estados_locales_codigo_establecimiento").val("");
    $("#form_buscar_estados_locales_nombre_departamento").val("");
    $("#form_buscar_estados_locales_nombre_distrito").val("");
    $("#form_buscar_estados_locales_nombre_zona").val("");
    $("#form_buscar_estados_locales_nombre_asentamiento_colonia").val("");
    $("#form_buscar_estados_locales_suministro_energia_electrica").val("");
    $("#form_buscar_estados_locales_abastecimiento_agua").val("");
    $("#form_buscar_estados_locales_servicio_sanitario_actual").val("");
    $("#form_buscar_estados_locales_titulo_de_propiedad").val("");
    $("#form_buscar_estados_locales_cuenta_plano").val("");
    $("#form_buscar_estados_locales_prevencion_incendio").val("");
    
    $("#form-buscar-estados-locales").submit();

  } 

  <% if params[:ci].present? %>

    $("#form_buscar_estados_locales_codigo_institucion").val("<%= params[:ci] %>");
    $("#form-buscar-estados-locales").submit();
  
  <% else %>

    limpiar_form_buscar_estados_locales();
  
  <% end %>

</script>

