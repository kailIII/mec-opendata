<h2>
  <span itemprop="name">Registro de T&iacute;tulos</span>
  <meta itemprop="description" content="Se refiere a los Títulos expedidos por el MEC."
        />
  <meta itemprop="url" content="http://datos.mec.gov.py/data/registros_titulos">  
  <meta itemprop="temporal" style="display: none;" content="2012-01-01/2014-12-31"/>
  <span itemprop="catalog" itemscope itemtype="https://schema.org/DataCatalog" style="display: none;">
    <meta itemprop="name" content="Datos Abiertos del Ministerio de Educación y Cultura">
    <meta itemprop="url" content="http://datos.mec.gov.py/">
    <meta itemprop="description" content="Datos Abiertos del Ministerio de Educación y Cultura">
  </span>
  <span itemprop="provider" itemscope itemtype="https://schema.org/Organization" style="display: none;">
    <meta itemprop="name" content="Ministerio de Educación y Cultura">
    <meta itemprop="url" content="http://www.mec.gov.py/">
    <meta itemprop="email" content="datosabiertos@mec.gov.py">
  </span>
  <span itemprop="creator" itemscope itemtype="https://schema.org/Person" style="display: none;">
    <meta itemprop="name" content="Juan Barrios">
    <meta itemprop="email" content="datosabiertos@mec.gov.py">
  </span>
  <meta itemprop="license" style="display: none;" content="https://creativecommons.org/licenses/by/4.0/legalcode"/>
  <meta itemprop="keywords" style="display: none;" content="educación,titulos,carreras"/>
  <meta itemprop="version" style="display: none;" content="1.0"/>

  <span style="float:right;">
    <%= link_to "Ver diccionario", mec_custom_url(def_registros_titulos_url), :title => "Ir al diccionario", :style => "font-size:12px;" %>
    <%= link_to image_tag("def_icon.png", :style => "width:24px;" ), mec_custom_url(def_registros_titulos_url), :title => "Ir al diccionario" %>
    <%= link_to "Inicio", mec_custom_url(index_url), :title => "Ir al inicio", :style => "font-size:12px;" %>
    <%= link_to image_tag("home.png", :style => "width:24px;"), mec_custom_url(index_url), :title => "Ir al inicio" %>
  </span>

</h2>
<div class="table-outter">
  <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px; width: 1500px; max-width: none;" >

    <tr>

      <%= form_tag mec_custom_url(data_registros_titulos_lista_url(nil,nil)), :remote => true, :id => "form-buscar-registros-titulos" do  %>

        <th style="width:5%;" class="text-min celda-derecha">
          <%= label_tag "Año" %><br />
          <%= select :form_buscar_registros_titulos, :anio, [nil, 2012, 2013, 2014], {:class => 'text-min'} %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_anio').val('');$('#form-buscar-registros-titulos').submit();" %>
        </th>

        <th style="width:8%;" class="text-min celda-derecha">
          <%= label_tag "Mes" %><br />
          <%= select :form_buscar_registros_titulos, :mes, options_meses, {:class => 'text-min'} %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_mes').val('');$('#form-buscar-registros-titulos').submit();" %>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag "Documento" %><br />
          <%= text_field_tag :form_buscar_registros_titulos_documento, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_documento').val('');$('#form-buscar-matriculaciones-departamentos-distritos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag "Nombre completo"%><br />
          <%= text_field_tag :form_buscar_registros_titulos_nombre_completo, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_nombre_completo').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag "Carrera" %><br />
          <%= text_field_tag :form_buscar_registros_titulos_carrera, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_carrera').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "T&iacute;tulo".html_safe %><br />
          <%= text_field_tag :form_buscar_registros_titulos_titulo, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_titulo').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag nil, "N&uacute;mero de Resoluci&oacute;n".html_safe %><br />
          <%= text_field_tag :form_buscar_registros_titulos_numero_resolucion, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_numero_resolucion').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag nil, "Fecha de Resoluci&oacute;n".html_safe %><br />
          <%= text_field_tag :form_buscar_registros_titulos_fecha_resolucion, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_fecha_resolucion').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag nil, "Tipo de Instituci&oacute;n".html_safe %><br />
          <%= text_field_tag :form_buscar_registros_titulos_tipo_institucion, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_tipo_institucion').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag nil, "Instituci&oacute;n".html_safe %><br />
          <%= text_field_tag :form_buscar_registros_titulos_institucion, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_institucion').val('');$('#form-buscar-registros-titulos').submit();" ,:style => "color:#fff;"%>
        </th>

        <th style="width:6%;" class="text-min celda-derecha">
          <%= label_tag "Gobierno actual" %><br />
          <%= select :form_buscar_registros_titulos, :gobierno_actual, [["Todos", 1], ["Si", 2], ["No", 3]], {:class => 'text-min'}, onchange: "filtrar_gobierno_actual();" %>
          <%= link_to_function icon_delete, "$('#form_buscar_registros_titulos_gobierno_actual').val('');$('#form-buscar-registros-titulos').submit();" %>
        </th>

      <% end %>

    </tr>

    <tbody id="registros-titulos-lista"></tbody>

  </table>
</div>
<script type="text/javascript">

  $("#form-buscar-registros-titulos").bind("submit", function() {

    $("#registros-titulos-lista").html("<%= escape_javascript("<tr><td colspan='7'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")
  })

  $(".table-bordered :input").bind('change', function() {

    $("#form-buscar-registros-titulos").submit();

  })

  function filtrar_gobierno_actual() {

    if ($("#form_buscar_registros_titulos_gobierno_actual").val() == '3') {
      $('#form_buscar_registros_titulos_anio').val('');
      $('#form_buscar_registros_titulos_mes').val('');
      $("#form-buscar-registros-titulos").submit();
    }

    if ($("#form_buscar_registros_titulos_gobierno_actual").val() == '2') {
      $('#form_buscar_registros_titulos_anio').val('');
      $('#form_buscar_registros_titulos_mes').val('');
      $("#form-buscar-registros-titulos").submit();
    }

  }

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_registros_titulos() {

    $("#form_buscar_registros_titulos_anio").val("");
    $("#form_buscar_registros_titulos_mes").val("");
    $("#form_buscar_registros_titulos_documento").val("");
    $("#form_buscar_registros_titulos_nombre_completo").val("");
    $("#form_buscar_registros_titulos_carrera").val("");
    $("#form_buscar_registros_titulos_titulo").val("");
    $("#form_buscar_registros_titulos_numero_resolucion").val("");
    $("#form_buscar_registros_titulos_fecha_resolucion").val("");
    $("#form_buscar_registros_titulos_tipo_institucion").val("");
    $("#form_buscar_registros_titulos_institucion").val("");
    $("#form_buscar_registros_titulos_gobierno_actual").val("");
    $("#form-buscar-registros-titulos").submit();

  }

  limpiar_form_buscar_registros_titulos();

</script>

