  <span style="float:right;">
    <%= link_to "Ver diccionario", mec_custom_url(def_servicios_basicos_url), :title => "Ir al diccionario", :style => "font-size:12px;" %>
    <%= link_to image_tag("def_icon.png", :style => "width:24px;" ), mec_custom_url(def_servicios_basicos_url), :title => "Ir al diccionario" %>
    <%= link_to "Inicio", mec_custom_url(index_url), :title => "Ir al inicio", :style => "font-size:12px;" %>
    <%= link_to image_tag("home.png", :style => "width:24px;"), mec_custom_url(index_url), :title => "Ir al inicio" %>
  </span>

</h2>

<div class="table-outter">

  <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px; width: 1900px; max-width: none;">

    <tr>

      <%= form_tag mec_custom_url(data_servicios_basicos_lista_url(nil)), :remote => true, :id => "form-buscar-servicios-basicos" do  %>

        <th style="width:4%;" class="text-min celda-derecha">
          <%= label_tag "Periodo" %><br /><br />

          <%= select :form_buscar_servicios_basicos, :periodo, [2014], {:class => 'text-min'} %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_periodo'));" %>

        </th>

        <th style="width:4%" class="text-min">
          <%= label_tag "Departamento"%><br /><br />
          <%= text_field_tag :form_buscar_servicios_basicos_nombre_departamento, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_nombre_departamento'));" %>
        </th>

        <th style="width:6%" class="text-min">
          <%= label_tag "Distrito" %><br /><br />
          <%= text_field_tag :form_buscar_servicios_basicos_nombre_distrito, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_nombre_distrito'));" %>
        </th>

        <th style="width:6%" class="text-min">
          <%= label_tag nil, "C&oacute;digo<br />Establecimiento".html_safe %><br />
          <%= text_field_tag :form_buscar_servicios_basicos_codigo_establecimiento, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_codigo_establecimiento'));" %>
        </th>

        <th style="width:6%" class="text-min">
          <%= label_tag "Barrio/Localidad" %><br /><br />
          <%= text_field_tag :form_buscar_servicios_basicos_nombre_barrio_localidad, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_nombre_barrio_localidad'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Zona".html_safe%><br /><br />
          <%= text_field_tag :form_buscar_servicios_basicos_nombre_zona, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_nombre_zona'));" %>
        </th>

        <th style="width:8%;" class="text-min">
          <%= label_tag nil, "Nombre de Asentamiento<br/>o Colonia".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_nombre_asentamiento_colonia, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_nombre_asentamiento_colonia'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Suministro Energ&iacute;a<br/>El&eacute;ctrica".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_suministro_energia_electrica, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_suministro_energia_electrica'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Abastecimiento de<br/>Agua".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_abastecimiento_agua, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_abastecimiento_agua'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Servicio Sanitario<br/>Actual".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_servicio_sanitario_actual, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_servicio_sanitario_actual'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "T&iacute;tulo de<br/> Propiedad".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_titulo_de_propiedad, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_titulo_de_propiedad'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Cuenta con Plano".html_safe%><br /><br />
          <%= text_field_tag :form_buscar_servicios_basicos_cuenta_plano, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_cuenta_plano'));" %>
        </th>

        <th style="width:6%;" class="text-min">
          <%= label_tag nil, "Cuenta con Prevenci&oacute;n<br/> de Incendio".html_safe%><br />
          <%= text_field_tag :form_buscar_servicios_basicos_prevencion_incendio, nil, :class => 'text-min' %>
          <%= link_to_function icon_delete, "quitar_filtro($('#form_buscar_servicios_basicos_prevencion_incendio'));" %>
        </th>

      <% end %>

    </tr>

    <tbody id="servicios-basicos-lista"></tbody>

  </table>

</div>

<table class="table table-striped table-bordered table-hover">
  <tbody id="servicios-basicos-footer"></tbody>
</table>

<script type="text/javascript">

  $("#form-buscar-servicios-basicos").bind("submit", function() {

    $("#servicios-basicos-lista").html("<%= escape_javascript("<tr><td colspan='19' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}").html_safe %></td></tr>")

  })

  $("#form_buscar_servicios_basicos_periodo").bind('change', function() {

    $.ajaxQ.abortAll();
    $("#form-buscar-servicios-basicos").submit();

  })

  $(".table-bordered input").bind('change', function() {

    $.ajaxQ.abortAll();
    $("#form-buscar-servicios-basicos").submit();

  })

  //LIMPIAR FORMULARIO DE BUSQUEDA
  function limpiar_form_buscar_servicios_basicos() {

    $("#form_buscar_servicios_basicos_periodo").val("2014");
    $("#form_buscar_servicios_basicos_codigo_establecimiento").val("");
    $("#form_buscar_servicios_basicos_nombre_departamento").val("");
    $("#form_buscar_servicios_basicos_nombre_distrito").val("");
    $("#form_buscar_servicios_basicos_nombre_barrio_localidad").val("");
    $("#form_buscar_servicios_basicos_nombre_zona").val("");
    $("#form_buscar_servicios_basicos_nombre_asentamiento_colonia").val("");
    $("#form_buscar_servicios_basicos_suministro_energia_electrica").val("");
    $("#form_buscar_servicios_basicos_abastecimiento_agua").val("");
    $("#form_buscar_servicios_basicos_servicio_sanitario_actual").val("");
    $("#form_buscar_servicios_basicos_titulo_de_propiedad").val("");
    $("#form_buscar_servicios_basicos_cuenta_plano").val("");
    $("#form_buscar_servicios_basicos_prevencion_incendio").val("");
    $.ajaxQ.abortAll();
    $("#form-buscar-servicios-basicos").submit();

  }

<% if params[:ci].present? %>

    $("#form_buscar_servicios_basicos_codigo_institucion").val("<%= params[:ci] %>");
    $.ajaxQ.abortAll();
    $("#form-buscar-servicios-basicos").submit();

<% else %>

    limpiar_form_buscar_servicios_basicos();

<% end %>

  //--------------- QUITAR FILTRO -------------------//
  function quitar_filtro(id) {
    id.val('');
    $.ajaxQ.abortAll();
    $("#form-buscar-servicios-basicos").submit();
  
  }
  //-------------------------------------------------//

</script>

